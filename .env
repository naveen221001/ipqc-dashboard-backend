# IPQC Dashboard Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# GitHub Configuration (for fetching Excel files)
GITHUB_REPO_OWNER=your-username
GITHUB_REPO_NAME=ipqc-dashboard
GITHUB_BRANCH=main
GITHUB_TOKEN=your_github_token_here

# Cache Configuration
CACHE_EXPIRY_MINUTES=5
DATA_REFRESH_INTERVAL_MINUTES=10

# Excel File Configuration
EXCEL_FILE_NAME=IPQC_Peel_Strength.xlsx

# Process Control Limits
UPPER_SPEC_LIMIT=3.0
LOWER_SPEC_LIMIT=2.0
TARGET_VALUE=2.5
UPPER_CONTROL_LIMIT=2.8
LOWER_CONTROL_LIMIT=2.2

# API Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://your-frontend-domain.netlify.app

# Production Configuration (for Render deployment)
# Uncomment and update these for production deployment

# NODE_ENV=production
# FRONTEND_URL=https://your-frontend-domain.netlify.app
# PORT=10000

# Security Headers
HELMET_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Performance Monitoring
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Error Handling
DETAILED_ERRORS=true

# Database Configuration (if you plan to add database later)
# DATABASE_URL=postgresql://username:password@host:port/database
# DB_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24

# Notification Configuration (for future alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# EMAIL_SERVICE_API_KEY=your_email_service_api_key